<p id="notice"><%= notice %></p>

<h1>Listing Works</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Doctor</th>
      <th>Clinic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @works.each do |work| %>
      <tr>
        <td><%= work.doctor.user.name + ' ' + work.doctor.user.surname %></td>
        <td><%= work.clinic.name %></td>
        <td><%= link_to 'Show', work %></td>
        <td><%= link_to 'Edit', edit_work_path(work) %></td>
        <td><%= link_to 'Destroy', work, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Work', new_work_path, :class => "btn btn-primary", :style=>'color:#FFFFFF;' %>
